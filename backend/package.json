{
  "name": "@gclient/backend",
  "version": "1.0.0",
  "description": "Backend service for the G-Client Learner Registration Management System (LRMS). Handles authentication, role-based access control, course management, and learner onboarding.",
  "keywords": [
    "backend",
    "api",
    "express",
    "nodejs",
    "prisma",
    "postgresql",
    "auth",
    "otp",
    "jwt",
    "rbac",
    "registration",
    "learner-management",
    "admin-dashboard",
    "gclient",
    "lrms"
  ],
  "homepage": "https://github.com/yasiramus/gclient-registration-sysytem#readme",
  "bugs": {
    "url": "https://github.com/yasiramus/gclient-registration-sysytem/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yasiramus/gclient-registration-sysytem.git"
  },
  "license": "ISC",
  "author": "Yasira Musah",
  "type": "commonjs",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "seed": "tsx src/db/seed.ts",
    "prisma:generate": "prisma generate --no-engine",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:reset": "prisma migrate reset --force --skip-seed",
    "prisma:push": "prisma db push --force-reset",
    "prisma:db": "prisma db push",
    "prisma:studio": "prisma studio",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "preinstall": "npx only-allow pnpm",
    "test": "jest --runInBand --detectOpenHandles --passWithNoTests"
  },
  "dependencies": {
    "@prisma/client": "6.12.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.14",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.4",
    "prisma": "^6.12.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
