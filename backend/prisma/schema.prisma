generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  LEARNER
  SUPER_ADMIN
}

enum VerificationType {
  EMAIL
  RESET
}

enum PaymentStatus {
  PAID
  PARTIAL
  PENDING
}

model User {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  email        String   @unique
  passwordHash String
  role         Role     @default(LEARNER)
  isVerified   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  verificationTokens VerificationToken[] // one-to-many
}

model VerificationToken {
  id        String           @id @default(uuid())
  type      VerificationType
  token     String           @unique
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime         @default(now())
  expiresAt DateTime
  usedAt    DateTime? //null= not used

  @@index([userId, createdAt], name: "idx_verification_user_created")
}

model Track {
  id          String    @id @default(uuid())
  name        String    @unique
  price       Decimal   @db.Decimal(10, 2)
  duration    String
  instructor  String
  description String
  image       String
  courses     Course[]
  learner     Learner[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Course {
  id          String    @id @default(uuid())
  trackId     String
  title       String
  description String
  image       String
  track       Track     @relation(fields: [trackId], references: [id])
  learner     Learner[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([trackId])
}

model Learner {
  id            String        @id @default(uuid())
  firstName     String
  lastName      String
  email         String        @unique
  password      String
  trackId       String
  courseId      String
  paymentStatus PaymentStatus @default(PENDING)
  invoices      Invoice[]
  track         Track         @relation(fields: [trackId], references: [id])
  course        Course        @relation(fields: [courseId], references: [id])
  createdAt     DateTime      @default(now())
}

model Invoice {
  id         String        @id @default(uuid())
  learnerId  String
  amountPaid Float
  status     PaymentStatus
  dueAmount  Float
  learner    Learner       @relation(fields: [learnerId], references: [id])
  createdAt  DateTime      @default(now())

  @@index([learnerId])
}
